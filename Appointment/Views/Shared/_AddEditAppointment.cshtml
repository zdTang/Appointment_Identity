@using Appointment.Models.ViewModels
@model AddAppointmentVM

<div class="modal fade" role="dialog" id="appointmentInput" data-backdrop="static" data-keyboard="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="apointmentForm" autocomplete="off" asp-controller="Appointment" asp-action="Index" method="post" data-ajax="true" data-ajax-update="#partialform" data-ajax-mode="replace">
                <div class="modal-header">
                    <h4 class="modal-title">Add/Edit Appointment</h4>
                </div>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="modal-body">
                    <div class="form-group">
                        <label asp-for="Title">Title</label>
                        <input asp-for="Title"  name="Title" id="Title" class="form-control" data-ajax-update="Title"/>
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description">Descriptions</label>
                        
                        <input asp-for="Description" id="Description" name="Description" class="form-control" data-ajax-update="Description"/>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Patient">Select Patient</label>
                      
                        <select asp-for="Patient"  name="Patient" id="Patient" data-ajax-update="Patient" asp-items="@(new SelectList(ViewBag.PatientList,"Id","Name"))" class="form-control" ></select>
                        <span asp-validation-for="Patient" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Duration">Duration</label>
                        <select asp-for="Duration" name="Duration" id="Duration" data-ajax-update="Duration" class="form-control" asp-items="ViewBag.Duration" ></select>
                        <span asp-validation-for="Duration" class="text-danger"></span>
                        
                    </div>
                    <input type="hidden" id="id" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" onclick="onCloseModal();">Close</button> &nbsp;
                    @*<button type="button" id="btnSubmit" class="btn btn-success" onclick="onSubmitForm();">Submit</button>*@
                    <input type="submit" class="btn btn-secondary" value="Submit" />


                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}